{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Additional Options */
    "baseUrl": ".",
    "paths": {
      "#app": ["./node_modules/nuxt/dist/app"],
      "#app/*": ["./node_modules/nuxt/dist/app/*"],
      "#build": ["./node_modules/nuxt/dist/build"],
      "#build/*": ["./node_modules/nuxt/dist/build/*"],
      "#config": ["./node_modules/nuxt/dist/config"],
      "#config/*": ["./node_modules/nuxt/dist/config/*"],
      "#image": ["./node_modules/nuxt/dist/image"],
      "#image/*": ["./node_modules/nuxt/dist/image/*"],
      "#imports": ["./node_modules/nuxt/dist/imports"],
      "#imports/*": ["./node_modules/nuxt/dist/imports/*"],
      "#nuxt": ["./node_modules/nuxt/dist"],
      "#nuxt/*": ["./node_modules/nuxt/dist/*"]
    },
    "types": ["jest", "@nuxt/types"]
  },
  "include": [
    "src/**/*.ts",
    "nuxt.config.ts",
    "src/tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
